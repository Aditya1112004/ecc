<%-include('partials/navbar.ejs')%>

<head>
  <link rel="stylesheet" href="/css/allmembers.css">
</head>

<section class="mem">
  <!-- faculty & founder -->
  <h1>Faculty & Founder</h1>
  <div class="memcard ff">
    <div class="card">
      <div class="bg"></div>
      <img src="/images/faculty.jpg" alt="">
      <div class="info">
        <h3>Dr. K.S.Tiwari</h3>
        <h5>Faculty Coordinator</h5>
      </div>
      <div class="handles">
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
        <a href="#"><i class="fa fa-envelope"></i></a>
      </div>
    </div>
    <div class="card">
      <div class="bg"></div>
      <img src="/images/Christy.jpg" alt="">
      <div class="info">
        <h3>Christy Daniel</h3>
        <h5>Founder</h5>
      </div>
      <div class="handles">
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
        <a href="#"><i class="fa fa-envelope"></i></a>
      </div>
    </div>
  </div>

  <!-- present team -->
  <h1>Team 2023-24</h1>
  <div class="memcard present">
    <% newteam.forEach(newmember => { %>

    <div class="card cards">
      <div class="bg"></div>
      <img src="/images/newteam/<%=newmember.img%>" alt="Profile">
      <div class="info">
        <h3><%=newmember.name%></h3>
        <h5><%=newmember.desg%></h5>
      </div>
      <div class="handles">
        <a href="https://www.instagram.com/<%=newmember.insta%>"><i class="fab fa-instagram"></i></a>
        <a href="https://www.linkedin.com/in/<%=newmember.linkedin%>"><i class="fab fa-linkedin"></i></a>
        <a href="mailto:<%=newmember.mail%>"><i class="fa fa-envelope"></i></a>
      </div>
    </div>
    <% }) %>
  </div>


  <!-- old team -->
  <h1><button onclick="dis()">Team 2022-23 ></button></h1>
  <div class="memcard old" style="display: none;" id="old">

    <% oldteam.forEach(oldmember => { %>

    <div class="card cards">
      <div class="bg"></div>
      <img src="/images/oldteam/<%=oldmember.img%>" alt="Profile">
      <div class="info">
        <h3><%=oldmember.name%></h3>
        <h5><%=oldmember.desg%></h5>
      </div>
      <div class="handles">
        <a href="https://www.instagram.com/<%=oldmember.insta%>"><i class="fab fa-instagram"></i></a>
        <a href="https://www.linkedin.com/in/<%=oldmember.linkedin%>"><i class="fab fa-linkedin"></i></a>
        <a href="mailto:<%=oldmember.mail%>"><i class="fa fa-envelope"></i></a>
      </div>
    </div>
    <% }) %>
  </div>
</section>

<%-include('footer.ejs')%>


<script>
  disblk = document.getElementById('old');

    let x=0;
  function dis() { 
    x++;
        if (x === 0) {
                disblk.style="display:flex;transition:0.3s";
        }
        else if (x % 2 === 0) {             
                disblk.style="display:flex;transition:0.3s";
        }
        else {
                disblk.style="display:none;transition:0.3s";
        }
      }
    
</script>